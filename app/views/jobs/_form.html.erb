<%= form_with(model: job, local: true) do |form| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :job_title %>
  </div>

  <div class="field">
    <%= form.label :Pictures %>
    <%= form.file_field :pictures, multiple: true %>
    <!-- for multiple image support -->
    <%= form.hidden_field :pictures_cache %>
    <!-- to catche the image -->
    <% if job.pictures? %>
    <% job.pictures.each do |picture|%>
    <%= image_tag(picture.minithumb.url) %>
    <%= label_tag :remove_picture do %>
        Delete
        <%= form.check_box :remove_picture %>
      <% end %>
    <% end %>
<% end %>
  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :job_description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
