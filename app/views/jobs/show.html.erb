<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row container">
    <div class="col-md-7">
      <% if @job.pictures? %>
        <ul>
          <% @job.pictures.each do |picture|%>
            <li><%= image_tag(picture.large.url, alt: "image", class: "img-responsive")%></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-4">
      <h1 id="fn"><%= @job.title%></h1>

      <h3 id="underline">Description:
      </h3>
      <h5><%= @job.description%></h5>
      <h3>Date:
        <%= @job.date%>
      </h3>
      <h3>Time:
        <%= @job.time%>
      </h3>
      <hr>
      <h1><%= image_tag('tuma.png')%>
        <%= @job.employer.name%></h1>
      <% if employer_signed_in?%>
        <% if current_employer.id == @job.employer.id %>
          <div class="row">
            <div class="col-md-6">
              <%= link_to edit_job_path(@job.id) do%>
              <img
                class="icon icons8-Edit"
                width="24"
                height="24"
                id="k"
                src="data:image/png;base64,">
              <br>
              Edit
            <% end %>
          </div>
          <div class="col-md-6">
            <%= link_to @job, method: :delete, data: { confirm: 'Are you sure?' } do%>
            <img
              id="k"
              src="data:image/png;base64,"><br>
            Delete
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
  <hr>
  <h3>Location
  </h3>
  <h4><%= @job.address%></h4>

<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@job.latitude}%2C#{@job.longitude}" %>
  <!-- I will come include a better quality map, maybe embeded maps instead of this static one -->
  <h4>Longitude: <%= @job.longitude%></h4>
  <h4>Latitude: <%= @job.latitude%></h4>

  <h3>Nearby volunteer opportunity locations</h3>
  <ul>
    <% @job.nearbys(10).each do |location|%>
      <li><%= link_to location.address, job_path(location)%> (<%= location.distance.round(2)%> miles)</li>
    <% end %>
  </ul>
</div>
<%= link_to 'Back', jobs_path %>
</div>
</div>
