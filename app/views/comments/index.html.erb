<h1>Listing comments</h1>

<table>
  <tr>
    <th>Message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.message %></td>
    <td><%= link_to 'Show', [comment.jobs, comment] %></td>
    <td><%= link_to 'Edit', edit_jobs_comment_path(comment.jobs, comment) %></td>
    <td><%= link_to 'Destroy', [comment.jobs, comment], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

